{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./lib/dist",
    "paths": {
      "@src/*": ["lib/src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["./lib/types", "./node_modules", "./node_modules/@types"],
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "lib/src/**/*",
    "test/**/*",
    "*.config.{ts,mts,cts}"
  ]
}
